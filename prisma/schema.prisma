generator client {
  provider = "dart run orm"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Category {
  id          Int    @id @default(autoincrement())
  name        String  @unique
  isDefault   Boolean
  createdAt   DateTime
  updatedAt   DateTime
  articles    Article[] 
}

model Article {
  id          Int    @id @default(autoincrement())
  title       String
  content     String
  category    Category @relation(fields: [category_id], references: [id])
  category_id Int 
}